<view class='mask'>
    <view class='content'>
        <image src='/static/pic/T2.png'  style='width:100%;height:100%;'></image>
        <image src='/static/pic/T1.png' style='width:100%;height:53.34%;position:absolute;top:0rpx;left:0rpx;'></image>
        <view style='position:absolute;top:50rpx;left:0rpx;height:auto;width:auto;color:#DF9596;border-radius:0 16rpx 16rpx 0;background:white;font-size:30rpx;padding-left:20rpx;padding-right:5rpx;font-family:"z"'>百人同舟</view>
        <text style='position:absolute;left:50rpx;top:43%;color:white;font-size:40rpx;font-weight:300;'>{{production__name}}</text>
        <view class='con1'>
               <view style='position:absolute;left:0rpx;height:100%;width:250rpx;direction:column;'>
               <image src='{{avatarUrl}}' style='border-radius:100%;width:100rpx;height:100rpx;margin-left:80rpx;margin-top:16%;'></image>
               <view style='font-size:24rpx;width:100%;text-align:center'>{{nickname}}</view>
               </view>


              <view style='position:absolute;left:250rpx;height:100%;width:250rpx;'>
               <view style='height:40rpx;'></view>
               <text style='position:absolute;left:30rpx;width:100rpx;font-size:24rpx;color:grey'>最终价格\n</text>
               <text style='font-size:40rpx;position:absolute;left:30rpx;width:100rpx;top:90rpx;font-family:"z";'>{{final_price}}</text>
               <text style='font-size:30rpx;position:absolute;left:160rpx;width:100rpx;top:100rpx;'>/元</text>
               
               <text style='font-size:16rpx;position:absolute;left:30rpx;width:200rpx;color:grey;top:150rpx;'>初始价格{{start_price}}元</text>
              </view>
            
              <view style='position:absolute;left:500rpx;height:100%;width:200rpx;'>
                 <view style='height:24rpx;'></view>
               <text style='margin-left:30rpx;font-size:24rpx;color:grey'>激励贝壳\n</text>
               <text style='font-size:30rpx;margin-left:30rpx;font-size:50rpx;font-family:"z"'>{{return_price}}</text>
              </view>
            </view>
            
        <view wx:if='{{index==1}}' class='con2'>
            <view style='height:40rpx;'></view>
            <text style='margin-left:60rpx;font-size:20rpx;'>您可预约商家体验 Or 立即完成支付~\n</text>
            <text style='margin-left:60rpx;font-size:20rpx;'>预约凭证: {{yuyue_string}}\n</text>
            <text style='margin-left:60rpx;font-size:20rpx;'>预约电话：{{yuyue_telephone}}</text>
            <view class='pay'>立即支付</view>
        </view>   

        <view wx:if='{{index==2}}' class='con2'>
        <view style='height:40rpx;'></view>
            <text style='margin-left:60rpx;font-size:30rpx;'>支付成功\n</text>
            <view style='position:absolute;left:200rpx;top:50rpx;font-size:16rpx;width:140rpx;height:30rpx;background:linear-gradient(to bottom right,#FDB38F,#F7907E);border-radius:10rpx;text-align:center;color:white;'>  激励贝壳已到帐\n</view>
            <text style='margin-left:60rpx;font-size:20rpx;'>支付凭证: {{payfor_string}}\n</text>
            <text style='margin-left:60rpx;font-size:20rpx;'>请尽快与商家取得联系完成最终对接</text>
            <image src='/static/t14.png' style='width:150rpx;height:150rpx;position:absolute;right:50rpx;top:50rpx;'></image>
        </view>
    </view>
</view>
