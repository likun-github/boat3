<view class='search_view'>
  <view class='search_img_view'>
    <image src='/static/boat/search.svg' class='search_img' mode="aspectFit"></image>
  </view>
  <input style='width:80%;display:inline-block;height:100%;' placeholder-style='font-size:12px;color:#636363' placeholder='搜索'></input>
</view>


<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{currentSwiper}}" class='swiper' bindchange='onslidechangeend' indicator-active-color='red'>
  <block wx:for="{{imgUrls}}" wx:key="imgUrls">
    <swiper-item>
      <image src="{{item}}" class="slide-image" bindtap='rec' />
    </swiper-item>
  </block>
</swiper>

<view class="dots">
  <block wx:for="{{imgUrls}}" wx:key="imgUrls">
    <view class="dot{{index == currentSwiper ? ' active1' : ''}}"></view>
  </block>
</view>

