<view class='order'>
  <image style='margin-left:310px;height:100%;width:10%' src='/static/boat/letorder.svg'></image>
  <view class='ordertext'>按综合</view>
</view>

<view class="producation_display" wx:for="{{showData}}" wx:key="unique">
  <view class='item_column' bindtap='to_producation_page' data-bean="{{item}}">
    <image class='producation_pic' src='{{item.producation_pic_url}}' mode='scaleToFill'></image>
    <view class='item_column_1'>
      <view style='font-size:34rpx;'>
        {{item.producation_name}}
      </view>
      <view class='text_3'>
        {{item.producation_des}}
      </view>
      <view class='item_column_2'>
        <view class='item_column_3'>
          <view class='text_4'>
            ￥{{item.producation_originalPrice- item.producation_cutdowmPrice}}
          
          </view>
          <view class='text_5'>
            ￥{{ item.producation_originalPrice}}- {{3900}}
              <view class='sameschool_pic'>本校同舟</view>
          </view>
        </view>
        <view>
          <image class='add_pic item_column_4' src='/static/boat/addTolist.svg'></image>
          <view  class='tongji'>
            <image class='item_column_5' src='/static/boat/tongji.svg'></image>
            <view class='item_column_5_text'>距离100人发船还剩1人</view>
          </view>
        
        </view>


      </view>
    </view>
  </view>
</view>



