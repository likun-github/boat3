<!--pages/look_tickets/look_tickets.wxml-->
<wxs module="filters" src="../../common/tool.wxs"></wxs>

<view class='container'>

  <view class='block1'>
    <view class='block1_image_view'>
      <image src='/static/pic/T1.png'></image>
       <view class='block1_boatkind'>{{order_list.state==''?'百人同舟':'BOAT小船'}}</view>
    </view>
    <view class='block1_production_view'>
      <text style='position:absolute;left:50rpx;top:43%;color:white;font-size:40rpx;font-weight:300;'>{{order_list.production__name}}</text>
    </view>
  </view>


   <view class='con1'>
    <view style='position:abso  lute;left:0rpx;height:100%;width:250rpx;direction:column;'>
      <image src='{{avatarUrl}}' style='border-radius:100%;width:100rpx;height:100rpx;margin-left:70rpx;margin-top:16%;'></image>
      <view style='font-size:24rpx;width:100%;text-align:center'>{{nickname}}</view>
    </view>
    <view style='position:absolute;left:250rpx;height:100%;width:250rpx;'>
      <view style='height:40rpx;'></view>
      <text style='position:absolute;left:30rpx;width:100rpx;font-size:24rpx;color:grey'>最终价格\n</text>
      <text style='font-size:40rpx;position:absolute;left:30rpx;width:100rpx;top:90rpx;font-family:"z";'>{{filters.toFix(final_price)}}</text>
      <text style='font-size:30rpx;position:absolute;left:160rpx;width:100rpx;top:100rpx;'>/元</text>
      <text style='font-size:16rpx;position:absolute;left:30rpx;width:200rpx;color:grey;top:150rpx;'>初始价格{{start_price}}元</text>
    </view>
    <view style='position:absolute;left:500rpx;height:100%;width:200rpx;'>
      <view style='height:24rpx;'></view>
      <text style='margin-left:30rpx;font-size:24rpx;color:grey'>激励贝壳\n</text>
      <text style='font-size:30rpx;margin-left:30rpx;font-size:50rpx;font-family:"z"'>{{filters.toFix(sprice*0.01)}}</text>
      <text style='font-size:16rpx;position:absolute;left:30rpx;width:200rpx;color:grey;top:150rpx;'>每100元激励1贝壳</text>
    </view>
  </view>




</view>