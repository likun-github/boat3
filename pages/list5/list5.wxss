.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.top {
  position: relative;
  width: 750rpx;
  height: 20%;
  background: #5ee4fe;
}

.background {
  position: relative;
  width: 800rpx;
  margin-left: -25rpx;
  height: 100%;
  margin-top: -20%;
}

.boat {
  position: absolute;
  width: 300rpx;
  height: 70rpx;
  border-radius: 40rpx;
  background: linear-gradient(to bottom, #fdb38f, #f7907e);
  margin-left: 225rpx;
  margin-top: 90px;
  text-align: center;
  line-height: 70rpx;
  color: rgba(255, 255, 255, 0.8);
}

.rightcicle {
  position: absolute;
  width: 200rpx;
  height: 300rpx;
  margin-top: -50rpx;
  right: -40rpx;
}

.leftcicle {
  position: fixed;
  width: 180rpx;
  height: 300rpx;
  top: 5%;
  left: 0rpx;
}

