.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: linear-gradient(to bottom right, #5ee4fe, #59b4fe);
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 62rpx;
  background: linear-gradient(to bottom right, #5ee4fe, #59b4fe);
  position: absolute;
  bottom: 0;
  left: 18rpx;
  border-radius: 16rpx;
}

.item-ans {
