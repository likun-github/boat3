/*  */

.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}

.tab-item.active {
  color: #4675f9;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 62rpx;
  background: #4675f9;
  position: absolute;
  bottom: 0;
  left: 18rpx;
  border-radius: 16rpx;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 250rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
  margin-bottom: 30rpx;
  margin-top: 15rpx;
  background-color: #dadada13;
}

.avatar {
  width: 250rpx;
  height: 250rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
  padding-left: 15rpx;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 70rpx;
}

.price {
  font-size: 12px;
  color: #b0b0b0;
  margin-bottom: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.price_number {
  font-size: 20px;
  color: #000;
  margin-bottom: 15rpx;
}

.btn_checkticket {
  width: 186rpx;
  height: 70rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 57rpx;
  color: white;
  left: 95rpx;
  top: 20rpx;
