  <image src='/static/boat/train.svg' mode='scaleToFill' style='width:100%;heigt:120rpx'></image>
</view>

<view class='text_1' wx:if="{{noticket}}">
  船票空空如也，赶紧去开动友谊小船吧~
</view>


<view class='toboat_btn' bindtap='turnTobuy' wx:if="{{noticket}}">
