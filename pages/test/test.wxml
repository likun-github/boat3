  <view class="bounceInDown shade_box" hidden='{{popup}}'>
    <image src='/static/boat/bought.png' style='width:100%;height:100%'></image>
    <view style='position:absolute;width:60%;left:20%;height:100rpx;top:60vh;'>
      <view class='input' style='position:absolute;left:0rpx;height:60rpx;top:5rpx;width:300rpx;'></view>
      <input bindinput='yaoqingma' placeholder='请输入BOAT小船邀请码' placeholder-style='color:grey' placeholder-class='c' style='position:absolute;width:280rpx;height:60rpx;left:20rpx;top:5rpx;font-size:20rpx;'></input>
      <view class='bt' bindtap='getin'>登船</view>
    </view>
  </view>
</view>
