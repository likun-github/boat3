.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: yellow;
}

.scroll {
  position: relative;
  width: 100%;
  height: 90%;
  background-color: wheat;
}

.swiper {
  position: relative;
  width: 100%;
  height: 50%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.bottom {
  position: relative;
  width: 100%;
  height: 10%;
  background-color: red;
}

.maskLayer {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(100, 100, 100, 0.5);
}

.choose {
  position: absolute;
  width: 100%;
  height: 80%;
  bottom: 0rpx;
  background-color: white;
}

.top {
  position: relative;
  width: 100%;
  height: 12.5%;
  display: flex;
  flex-direction: row;
}

.top .logo {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-left: 50rpx;
  margin-top: -30rpx;
}

.top .worth {
  position: relative;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.top .title {
  position: relative;
  background-color: #58b4fe;
  width: 250rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  color: white;
  text-align: center;
  line-height: 40rpx;
  font-size: 0.6em;
}

.middle {
  position: relative;
  width: 100%;
  height: 75%;
